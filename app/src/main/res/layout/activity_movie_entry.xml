<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieEntryActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/tbToolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnGenre"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tbToolbar"></android.support.v7.widget.AppCompatSpinner>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMovieName"
        android:hint="Enter Movie Name"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/spnGenre"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etProduction"
        android:hint="Enter Production Com"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/etMovieName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etIncome"
        android:hint="Enter Income"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/etProduction"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etRating"
        android:hint="Enter Rating"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etIncome"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etYear"
        android:hint="Enter Year"
        android:inputType="number"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/etRating"/>

</android.support.constraint.ConstraintLayout>